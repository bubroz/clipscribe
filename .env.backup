# =================================================================
# DEPRECATED SERVICES (No longer used)
# =================================================================
# The following are kept for backward compatibility but are not used:

# =================================================================
# DEVELOPMENT SETTINGS
# =================================================================
# Enable verbose logging for debugging
VERBOSE=true

# Disable streamed responses (useful for testing)
DISABLE_STREAMING=false

# Report formats available: 
# research_report, detailed_report, quick_report
REPORT_FORMAT=research_report

# Enable/disable specific features
USER_AGENT=Mozilla/5.0 (compatible; ChimeraResearcher/1.0)
SCRAPER=firecrawl  # Options: firecrawl, beautifulsoup, browser
SIMILARITY_THRESHOLD=0.42

# =================================================================
# USAGE INSTRUCTIONS:
# =================================================================
# 1. Copy this file: cp config.env.example .env
# 2. Fill in your API keys (minimum: GOOGLE_API_KEY and XAI_API_KEY)
# 3. Run: poetry install
# 4. Test your setup: poetry run python examples/system_diagnostic.py
# 5. Start researching! poetry run python examples/quick_smoke_test.py
# ================================================================= # Gemini API timeout (4 hours for long videos)
GEMINI_REQUEST_TIMEOUT=14400
