# ClipScribe Environment Configuration
# Copy this file to .env and configure your settings

# === REQUIRED ===
# Get your API key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# === v2.17.0 ENHANCED TEMPORAL INTELLIGENCE ===

# Temporal Intelligence Level: standard, enhanced, maximum
# enhanced = v2.17.0 default (12-20% cost increase, 300% more intelligence)
# maximum = highest quality with all visual cues (20%+ cost increase)
TEMPORAL_INTELLIGENCE_LEVEL=enhanced

# Extract temporal intelligence from visual cues (charts, graphs, timelines)
EXTRACT_VISUAL_TEMPORAL_CUES=true

# Extract temporal intelligence from audio/speech patterns
EXTRACT_AUDIO_TEMPORAL_CUES=true

# Minimum confidence for temporal intelligence extraction (0.0-1.0)
TEMPORAL_INTELLIGENCE_CONFIDENCE_THRESHOLD=0.7

# Enable temporal correlation across multiple videos
ENABLE_CROSS_VIDEO_TEMPORAL_CORRELATION=true

# === VIDEO RETENTION SYSTEM ===

# Video retention policy: delete, keep_processed, keep_all
# delete = remove source video after processing (saves space)
# keep_processed = keep only processed outputs (balanced)
# keep_all = keep source video and outputs (highest quality)
VIDEO_RETENTION_POLICY=delete

# Directory for archived video files
VIDEO_ARCHIVE_DIRECTORY=output/video_archive

# USD threshold for automatic retention decisions
RETENTION_COST_THRESHOLD=5.0

# Enable cost-based retention optimization
ENABLE_RETENTION_COST_OPTIMIZATION=true

# Maximum archive size in GB before cleanup
MAX_ARCHIVE_SIZE_GB=50

# === TIMELINE BUILDING ===

# Enable timeline synthesis across videos
ENABLE_TIMELINE_SYNTHESIS=true

# Time window for correlating events across videos (hours)
TIMELINE_CORRELATION_WINDOW_HOURS=168

# Minimum confidence for timeline event correlation (0.0-1.0)
TIMELINE_CONFIDENCE_THRESHOLD=0.8

# Maximum temporal events to extract per video
MAX_TIMELINE_EVENTS_PER_VIDEO=50

# Enable LLM-based date extraction from content
ENABLE_TIMELINE_DATE_EXTRACTION=true

# === ENHANCED COST MANAGEMENT ===

# Cost multiplier for enhanced temporal intelligence (1.12-1.20)
ENHANCED_TEMPORAL_COST_MULTIPLIER=1.15

# Optional daily spending limit in USD (blank = no limit)
DAILY_COST_LIMIT=

# Optional monthly spending limit in USD (blank = no limit)
MONTHLY_COST_LIMIT=

# Cost tracking granularity: operation, video, collection
COST_TRACKING_GRANULARITY=operation

# === BASIC SETTINGS ===

# AI model (default: google_genai:gemini-2.5-flash)
AI_MODEL=google_genai:gemini-2.5-flash

# AI temperature for creativity (0.0-1.0)
TEMPERATURE=0.3

# Output directory for processed content
OUTPUT_DIR=output

# Default language for transcription
DEFAULT_LANGUAGE=en

# Maximum video duration to process (seconds, 4 hours = 14400)
MAX_VIDEO_DURATION=14400

# === PERFORMANCE SETTINGS ===

# Maximum concurrent video downloads (1-10)
CONCURRENT_DOWNLOADS=3

# Audio chunk size for processing (seconds)
CHUNK_SIZE=600

# Timeout for Gemini API requests (seconds)
GEMINI_REQUEST_TIMEOUT=14400

# === COST TRACKING ===

# Enable cost tracking
ENABLE_COST_TRACKING=true

# Warn when single operation exceeds this cost (USD)
COST_WARNING_THRESHOLD=1.0

# === LOGGING ===

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Directory for log files
LOG_DIR=logs

# === OPTIONAL: YT-DLP SETTINGS ===

# Path to cookies file for accessing private content
YTDLP_COOKIES_FILE=

# Proxy URL for yt-dlp (if needed)
YTDLP_PROXY=

# =================================================================
# GETTING STARTED WITH ClipScribe v2.17.0
# =================================================================
# 1. Copy this file to .env: cp env.example .env
# 2. Add your Google API key above
# 3. Optionally adjust settings for your use case
# 4. Test basic functionality: poetry run clipscribe process "https://youtube.com/watch?v=..."
# 5. Try enhanced temporal intelligence: poetry run clipscribe process "URL" --temporal-intelligence enhanced
# 6. Process video collections: poetry run clipscribe process-collection "URL1,URL2,URL3"
# 7. Launch Mission Control: poetry run streamlit run streamlit_app/ClipScribe_Mission_Control.py
# ================================================================= 